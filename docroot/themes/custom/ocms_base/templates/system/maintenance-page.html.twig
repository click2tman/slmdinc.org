{#
/**
 * @file
 * Default theme implementation to display a single Drupal page while offline.
 *
 * All available variables are mirrored in page.html.twig.
 * Some may be blank but they are provided for consistency.
 *
 * @see template_preprocess_maintenance_page()
 *
 * @ingroup themeable
 */
#}

{% set container = theme.settings.fluid_container ? 'container-fluid' : 'container' %}
  <div class="ocms-header_irs_banner">
      <div class="{{ container }}">
        <div class="row">
          <div class="col-md-12">
            <span class="ocms-logo pull-left"><img src="/themes/custom/ocms_base/logo.svg" alt="IRS Logo"></span>
          </div>
        </div>
      </div>
  </div>
{# Header #}
{#{% include 'global-header.html.twig' %}#}

{% block main %}
<div role="main" class="{{ container }}">
  <div class="row">

    {# Main #}
    <div class="ocms-error-message col-md-12">

      <i class="fa fa-4x fa-cogs ocms-error-message__icon" aria-hidden="true"></i>
      <h1 class="ocms-error-message__title">We'll be back soon!</h1>
      <p class="ocms-error-message__body">
        Sorry for the inconvenience but we're performing some maintenance at the moment.
        If you need to you can always contact us, otherwise we'll be back online shortly!
      </p>

    </div>

  </div>
</div>
{% endblock %}

{# Footer #}
{#{% include 'global-footer.html.twig' %}#}
