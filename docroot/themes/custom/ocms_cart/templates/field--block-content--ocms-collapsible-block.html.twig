{#
/**
 * @file
 * Restaurant+'s theme override for the main slideshow custom block
 *
 * @see ocms_cart_preprocess_field__block_content__ocms_main_slideshow_block()
 */
#}
{{ attach_library('ocms_cart/collapsible-block') }}
{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    'field--ocms-collapsible-block',
    field_ocms_cb_trigger_icon_status|clean_class,
    'clearfix',
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'inline' ? 'inline',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {% if not label_hidden %}
    <h3{{ title_attributes.addClass(title_classes) }}>{{ label }}</h3>
  {% endif %}
  {% if field_ocms_cb_trigger_position_value == "top" %}
    <div class="collapsible-block__trigger {{ field_ocms_cb_title_state_value }}">
      <h3>
        <a role="button" class="{{ field_ocms_cb_trigger_state_value }}" data-toggle="collapse" href="#{{block_data.id}}" aria-expanded="false" aria-controls="{{block_data.id}}">
          {{ field_ocms_cb_title_value }}
          <span class="collapsible-block-icon collapsible-block__expand-icon"><i class="fa {{ field_ocms_cb_expand_icon_value }}"><span class="sr-only">{{ field_ocms_cb_expand_icon_value }}</span></i></span>
          <span class="collapsible-block-icon collapsible-block__collapse-icon"><i class="fa {{ field_ocms_cb_collapse_icon_value }}"><span class="sr-only">{{ field_ocms_cb_collapse_icon_value }}</span></i></span>
        </a>
      </h3>
    </div>
  {% endif %}
  <div class="collapse {{ field_ocms_cb_state_value }}" id="{{block_data.id}}">
    {% for item in items %}
      {{ item.content }}
    {% endfor %}
  </div>
  {% if field_ocms_cb_trigger_position_value == "bottom" %}
    <div class="collapsible-block__trigger {{ field_ocms_cb_title_state_value }}">
      <h3>
        <a role="button" class="{{ field_ocms_cb_trigger_state_value }}" data-toggle="collapse" href="#{{block_data.id}}" aria-expanded="false" aria-controls="{{block_data.id}}">
          {{ field_ocms_cb_title_value }}
          <span class="collapsible-block-icon collapsible-block__expand-icon"><i class="fa {{ field_ocms_cb_expand_icon_value }}"><span class="sr-only">{{ field_ocms_cb_expand_icon_value }}</span></i></span>
          <span class="collapsible-block-icon collapsible-block__collapse-icon"><i class="fa {{ field_ocms_cb_collapse_icon_value }}"><span class="sr-only">{{ field_ocms_cb_collapse_icon_value }}</span></i></span>
        </a>
      </h3>
    </div>
  {% endif %}
</div>
