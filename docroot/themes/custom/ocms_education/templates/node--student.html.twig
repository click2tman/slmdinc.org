{#
/**
 * @file
 * Scholarly's theme implementation to display a Student node.
 */
#}
{% extends "node.html.twig" %}
{% block content %}
  <div class="student-content-wrapper clearfix">
    {% if (content.field_ocms_photo|render) %}
      <div class="photo-wrapper">
        {{ content.field_ocms_photo }}
        {% if (content.field_ocms_email|render) or (content.field_ocms_twitter|render) or (content.field_ocms_linkedin|render) %}
          <ul class="members-social-bookmarks">
            {% if content.field_ocms_email|render %}
              <li class="email"><a target="_blank" href="mailto:{{node.field_ocms_email.value}}"><i class="fa fa-email"></i></a></li>
            {% endif %}
            {% if content.field_ocms_twitter|render %}
              <li class="twitter"><a target="_blank" href="{{node.field_ocms_twitter.uri}}"><i class="fa fa-twitter"></i></a></li>
            {% endif %}
            {% if content.field_ocms_linkedin|render %}
              <li class="linkedin"><a target="_blank" href="{{node.field_ocms_linkedin.uri}}"><i class="fa fa-linkedin"></i></a></li>
            {% endif %}
          </ul>
        {% endif %}
      </div>
    {% endif %}

    {% if not (content.field_ocms_photo|render) %}
      {% if (content.field_ocms_email|render) or (content.field_ocms_twitter|render) or (content.field_ocms_linkedin|render) %}
        <ul class="members-social-bookmarks">
          {% if content.field_ocms_email|render %}
            <li class="email"><a target="_blank" href="mailto:{{node.field_ocms_email.value}}"><i class="fa fa-email"></i></a></li>
          {% endif %}
          {% if content.field_ocms_twitter|render %}
            <li class="twitter"><a target="_blank" href="{{node.field_ocms_twitter.uri}}"><i class="fa fa-twitter"></i></a></li>
          {% endif %}
          {% if content.field_ocms_linkedin|render %}
            <li class="linkedin"><a target="_blank" href="{{node.field_ocms_linkedin.uri}}"><i class="fa fa-linkedin"></i></a></li>
          {% endif %}
        </ul>
      {% endif %}
    {% endif %}

    {% if (content.field_ocms_photo|render) %}
      <div class="article-content custom-width">
    {% endif %}

    {% if not (content.field_ocms_photo|render) %}
      <div class="article-content full-width">
    {% endif %}

      {{ title_prefix }}
      {% if page %}
        <h1 class="node-title">
          {{ label }}
        </h1>
      {% endif %}

      <div{{ content_attributes }}>
        {{ content | without('field_ocms_photo','field_ocms_email','field_ocms_twitter','field_ocms_linkedin','group_ocms_details','comment')}}
      </div>
    </div>
  </div>

  {{ content.group_ocms_details }}
  {{ content.comment }}
{% endblock %}
